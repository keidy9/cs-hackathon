{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0.2",
  "description": "A plain text description",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["main.js"],
      "css": ["styles.css"]
    }
  ],
  "optional_host_permissions": ["file://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["assets/hank.jpg"],
      "matches": ["<all_urls>"]
    }
  ]
}
